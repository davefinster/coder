{
    "workbench.colorTheme": "One Dark Pro",
    "terminal.integrated.shell.linux": "/bin/bash",
    "go.lintTool": "golint",
    "go.useCodeSnippetsOnFunctionSuggest": true,
    "files.eol": "\n",
    "go.useLanguageServer": true, // formatting only supports LF line endings,
    "gopls": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "analyses": {
            "fillreturns": true,
            "nonewvars": true,
            "undeclaredname": true,
            "unusedparams": true
        },
        "staticcheck": true
    }
}